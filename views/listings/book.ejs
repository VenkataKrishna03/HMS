<% layout("/layouts/boilerplate") %>
<div class="row mt-2">
    <div class="col-8 offset-2">
        <h3>Book Listing: <%= listing.title %></h3>
    </div>  
    <div class="card col-6 offset-2 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img mb-2" alt="<%= listing.image.filename %>" >
        <div class="card-body">
          <p class="card-text">
                <%= listing.description %> <br>
                &#x20B9; <%= listing.price %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
          </p>
        </div>
    </div>

    <br>
    <div class="col-8 offset-2 mt-4">
        <h4>Confirm Your Booking</h4>
        <form action="/listings/<%= listing._id %>/book" method="POST">
            <button class="btn btn-outline-dark">Confirm Booking</button>
        </form>
    </div>
</div>
<script src="/js/script.js"></script>
